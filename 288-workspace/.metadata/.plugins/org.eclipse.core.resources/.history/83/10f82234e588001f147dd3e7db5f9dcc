void main()
{
#if _RESET
    resetSimulationBoard();
#endif
    timer_init();
    lcd_init();
    uart_init(115200);

    lcd_clear();

    //#if _PART1      // Receive and display text
    // TODO
    char input_char;

    while (1) {

        input_char = uart_receive(); // Read the received character
        uart_sendChar(input_char);
        lcd_putc(input_char);

    }
    //#endif
    //
