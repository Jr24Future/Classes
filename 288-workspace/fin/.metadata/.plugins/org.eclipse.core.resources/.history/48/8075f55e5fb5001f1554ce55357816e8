void scan_left(){
    short i;
    for(i = 0; i <= 2; i++){
    scan_90to125();
    scan_125to90();
    }
}

void scan_right(){
    short i;
    for(i = 0; i <= 2; i++){
    scan_90to55();
    scan_55to90();
    }
}
