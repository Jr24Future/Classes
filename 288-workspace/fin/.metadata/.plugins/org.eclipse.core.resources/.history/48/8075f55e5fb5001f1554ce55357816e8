
#include "Final_scan.h"
#include "servo.h"
#include "Timer.h"
#include "lcd.h"
#include "button.h"
#include "ping.h"
#include "adc.h"
#include "string.h"
#include "uart.h"

void scan_180(){
    short i,j;
    float Ping_dist;
    float IR_dist;
    char scan_data[30];
    short length;

    servo_move(0);

    for(i = 0; i <= 180; i = i + 5){
        servo_move_fast(i);
        IR_dist = calculate_distance_linear(adc_read());
        Ping_dist = ping_read();
        if(i>=100){    //Change spacing depending on size of angle
            sprintf(scan_data, "%d             %.2f            %.2f\r\n", i, Ping_dist / 100.0, IR_dist / 100.0);
        }
        else if(i<100 && i>=10){
            sprintf(scan_data, "%d              %.2f            %.2f\r\n", i, Ping_dist / 100.0, IR_dist / 100.0);
        }
        else{
            sprintf(scan_data, "%d               %.2f            %.2f\r\n", i, Ping_dist / 100.0, IR_dist / 100.0);
        }
        length = strlen(scan_data);

        for(j = 0; j < length; j++){  // send data to putty
         uart_sendChar(scan_data[j]);
        }
    }
}

