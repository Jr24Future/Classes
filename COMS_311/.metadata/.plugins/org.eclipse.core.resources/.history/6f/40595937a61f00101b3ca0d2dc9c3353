package coms3110.hw4;

import java.util.List;

public class TestRunner {
    public static void main(String[] args) {
        String path = "test1.bmp"; // make sure this matches your image filename

        Pair<List<Integer>, List<Integer>> result = CharacterSeparator.findSeparationWeighted(path);
        if (result != null) {
            List<Integer> rows = result.getFirst();
            List<Integer> cols = result.getSecond();

            System.out.println("Detected Blackspace Rows: " + rows);
            System.out.println("Detected Blackspace Columns: " + cols);
        } else {
            System.out.println("Failed to process the image.");
        }
    }
}
